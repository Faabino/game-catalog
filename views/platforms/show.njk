{% extends "layout.njk" %}

{% block title %}
  <title>{{platform.name}}</title>
{% endblock %}

{% block css %}
  <link rel="stylesheet" href="/assets/styles/platform.css">
{% endblock %}

{% block content %}

<div class="container">
  <div class="row">
    <div class="card mb-3 col-12">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{platform.platform_logo.url}}" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card content">
            <div class="card-header">
              <h5 class="card-title">{{platform.name}}</h5>
            </div>
              <div class="card-body">
                <p class="card-text" id="summary">{{platform.summary}}</p>
              </div>
            </div>
            <div class="card content">
              <div class="card-header">
                <h5 class="card-title">Informations</h5>
              </div>
              <div class="card-body" id="caracteristics">
                <p class="card-text">Release: {{platform.platform_version_release_date}}</p>
                <p class="card-text">Connectivity: {{platform.connectivity}}</p>
                <p class="card-text">CPU: {{platform.cpu}}</p>
                <p class="card-text">Graphics: {{platform.graphics}}</p>
                <p class="card-text">Memory: {{platform.memory}}</p>
                <p class="card-text">Sound: {{platform.sound}}</p>
                <p class="card-text">Storage: {{platform.storage}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container">
    <div class="row">
      <button class="btn col-12" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Games
      </button>
      </p>
      <div class="col-12">
      <div class="collapse" id="collapseExample">
        <div class="card card-body" id="game-image">

          <div id="carouselGames" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">

              {% for game in platform.games %}
              {% if loop.index0 === 0 %}
              <div class="carousel-item active">
                <div class="col-3">
                <img src="{{game.cover.url}}" class="d-block w-100" style="max-width: 180px; max-height: auto"  alt="...">
              </div>
              </div>
              {% else %}
                <div class="carousel-item">
                  <img src="{{game.cover.url}}" class="d-block w-100" style="max-width: 180px; max-height: auto" alt="...">
                </div>
                {% endif %}
              {% endfor %}

            </div>
            <a class="carousel-control-prev" href="#carouselGames" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselGames" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

        </div>
      </div>
      </div>
    </div>
  </div>

{% endblock %}