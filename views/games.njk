{% extends "layout.njk" %}

{% block title %}
  <title>Games</title>
{% endblock %}

{% block css %}
  <link rel="stylesheet" href="/assets/styles/games.css">
{% endblock %}

{% block content %}
<h1>Games</h1>

{% for game in games %}

<div class="container">
  <div class="row">
    <a class="col-12" href="/games/{{game.slug}}">
      <div class="card mb-3">
        <div class="row no-gutters">
          <div class="col-md-3">
            <img class="image-url" src="{{game.cover.url}}" class="card-img" alt="...">
          </div>
          <div class="col-md-9">
            <div class="card-body" style="max-width: 1000px;">
              <h5 class="card-title">{{game.name}}</h5>
              <p class="card-text" id="summary">{{game.summary}}</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>
    </a>
  </div>
</div>

  {% endfor %}

{% endblock %}